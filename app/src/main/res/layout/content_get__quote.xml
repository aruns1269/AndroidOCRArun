<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/colorBackGround"
    tools:context=".Get_Quote">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"

        app:title="Principal"
        app:titleTextColor="@color/colorBackGround" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="My Estimated Quote"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"></TextView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="10dp"
        android:background="#ffffff"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp">

        <TableRow android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="5px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length"
                android:paddingTop="5px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:paddingTop="5px"
                android:textSize="17dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/premiumTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly\nPremium"
                android:textSize="17dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>

        </TableRow>
        <TableRow >
            <TextView
                android:id="@+id/coverageLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingTop="10px"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/covAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$50K"
                android:paddingTop="10px"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/monthlyPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$17"
                android:paddingTop="10px"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/text_estimated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textAlignment="center"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Policy Length(term)"></TextView>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/spinshape"

        android:scrollbarStyle="outsideOverlay" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coverage Amount"></TextView>

    <TextView
        android:id="@+id/seekbar_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorOrange"
        />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:max="1000"
        android:progressDrawable="@drawable/track"
        android:thumb="@drawable/seekbar_thumb"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginVertical="0dp">
        <TableRow >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$50K"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="17dp"
                android:gravity="left"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5M"
                android:paddingTop="5px"
                android:textSize="17dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="right"/>

        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Billing Frequency"></TextView>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinshape"/>


    <Button
        android:id="@+id/applyutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:text="Get this coverage"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textdisclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/holo_orange_dark"
        android:text="@string/discalimer"
        android:textSize="10dp"></TextView>






</LinearLayout>